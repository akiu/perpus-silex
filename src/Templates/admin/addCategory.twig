{% include "admin/layouts/header.twig" %}

<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2>Add Category</h2>
                <form method="post" action={{app.url_generator.generate('addCategory') }} novalidate>
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr' : {'class' : 'form-control', 'placeholder':'category'}}) }}
                        <div style="color: red;">
                            {{ form_errors(form.name) }}

                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.slug) }}
                        {{ form_widget(form.slug, {'attr' : {'class' : 'form-control', 'placeholder':'slug'}}) }}
                        <div style="color: red;">
                            {{ form_errors(form.slug) }}

                        </div>
                    </div>
                    {{ form_row(form._token) }}


                    <input class="btn btn-primary" type="submit" value="Add category" />
                </form>
            </div>
        </div>
        <div class="col-lg-12">
            <h2>Categories</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Slug</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name | e }}</td>
                            <td>{{ category.slug | e }}</td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /#page-content-wrapper -->

</div>

{% include "admin/layouts/footer.twig" %}